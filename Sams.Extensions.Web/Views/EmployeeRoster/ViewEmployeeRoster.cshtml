@using System.Data
@using System.Collections
@using System.Collections.Generic
@using Sams.Extensions.Model
@using Sams.Extensions.Utility
@using Sams.Extensions
@using Sams.Extensions.Model
@using Sams.Extensions.Web
@model EmployeeRosterViewModel
@{
    /**/

    ViewData["Title"] = "Upload Employee Roster";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Audit Details</title>
    <style>
        .LeaveClass{
            background-color:red;
            color:yellow;
            font-family:Verdana;
            font-size:small;
            font-weight:bold;
            text-align:left;
        }
        .OffClass {
            background-color: yellow;
            color: black;
            font-family: Verdana;
            font-size: small;
            font-weight: bold;
            text-align: left;
        }
        .Otherclass {
            background-color: grey;
            color: white;
            font-family: Verdana;
            font-size: small;
            font-weight: bold;
            text-align: left;
        }
    </style>
</head>
<body>


    @using (Html.BeginForm("SubmitRequest", "EmployeeRoster", FormMethod.Post))
    {
        <div style="width:100%;padding:5px;">
            <div class="PageHeaderSection" style="height:100%;position:unset;">
                <div class="card">
                    <div class="text-white text-center"><h4>Employee Roster details</h4></div>
                </div>
                <div class="card-body">

                    <div class="form-group">

                        <div class="row">
                            <div class="col-md-3">
                                <label for="Company">Company</label>
                                @Html.DropDownListFor(model => model.CurrentCompany, Model.Companies as List<SelectListItem>, "Select Company", new { @class = "form-control", @disabled = "disabled" })
                            </div>
                            <div class="col-md-3">
                                <label for="Location">Location</label>
                                @Html.DropDownListFor(model => model.CurrentLocation, Model.Locations as List<SelectListItem>, "Select Location", new { @class = "form-control" })
                            </div>
                            <div class="col-md-2">
                                <label for="FromDate">Year</label>
                                @Html.DropDownListFor(model => model.CurrentYear, Model.Years as List<SelectListItem>, "Select Year", new { @class = "form-control" })
                            </div>
                            <div class="col-md-2">
                                <label for="ToDate">Month</label>
                                @Html.DropDownListFor(model => model.CurrentMonth, Model.Months as List<SelectListItem>, "Select Month", new { @class = "form-control" })
                            </div>


                        </div>
                    </div>
                    <div class="form-group">
                        <input type="submit" id="btnViewEmployeeRoster" name="Submit" value="View Employee Roster" class="btn btn-primary SubmitButton" onclick="return ValidateSearch();" />
                        @if (Model.ShowExportToExcelButton)
                        {
                            <input type="submit" id="btnExport" name="Submit" value="Export to Excel" class="btn btn-primary SubmitButton" />
                        }
                        @*<input type="hidden" name="GridHtml" />*@
                    </div>
                </div>

            </div>

        </div>
    }

    <div id="FinalReport" style="padding:10px;">
        @if (Model == null || Model.EmployeeRosterData == null || Model.EmployeeRosterData.Count <= 0)
        {
            <h1>No employee roster data found</h1>
        }
        @foreach (var floorData in Model.EmployeeRosterData)
        {
            var cellCount = floorData.Value.Columns.Count;
            var key = floorData.Key.Split(',');

            <table class="table-bordered" style="margin-top:5px;">
                <tr style="background-color:dodgerblue;color:white;font-family:Verdana;font-size:15px;font-weight:bold;">
                    <th colspan="@cellCount" class="Details">
                        <span>@key[0]</span><span>(@key[1])</span>
                    </th>

                </tr>
                <tr style="background-color:lightblue;color:black;font-family:Arial;font-size:11px;font-weight:bold;">
                    @foreach (DataColumn dataColumn in floorData.Value.Columns)
                    {


                        <th class="Header text-center">
                            @Html.DisplayName(dataColumn.ColumnName)
                        </th>
                    }
                </tr>

                @foreach (DataRow dr in floorData.Value.Rows)
                {
                    <tr style="background-color: white;color:black;font-family:Verdana;font-size:11px;font-weight:normal;border:2px solid gray;">
                        @foreach (DataColumn dataColumn in floorData.Value.Columns)
                        {
                            <td class="Details text-left">
                                @Html.DisplayName(dr[dataColumn].ParseToText())
                            </td>
                        }
                    </tr>
                }


            </table>
        }
    </div>
    @*@using (Html.BeginForm("Export", "EmployeeRoster", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {

        }*@

</body>
</html>
